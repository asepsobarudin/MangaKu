<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".AboutAccount"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#240046"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/header_border">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Detail"
                android:textColor="#FF9E00"
                android:textSize="22sp"
                android:fontFamily="@font/poppins_semi_bold"/>

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="30dp"
                android:layout_height="36dp"
                android:src="@drawable/arrow_left_s_line"
                android:background="@drawable/header_border"
                android:onClick="btnBack"
                android:focusable="true"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="16dp"
            android:orientation="vertical"
            android:background="@drawable/item_border">
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:maxLines="3"
                android:textColor="#24FF00"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="-"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/image"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:src="@color/black"
                    android:layout_marginRight="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TableLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TableRow>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Type"
                                android:textColor="#24FF00"
                                android:fontFamily="@font/poppins_medium"
                                android:textSize="14sp" />
                            <TextView
                                android:layout_width="10dp"
                                android:layout_height="wrap_content"
                                android:text=":"
                                android:textAlignment="center"
                                android:textColor="#24FF00"
                                android:fontFamily="@font/poppins_medium"
                                android:textSize="14sp"/>
                            <TextView
                                android:id="@+id/type"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:maxLines="3"
                                android:textColor="#24FF00"
                                android:fontFamily="@font/poppins_medium"
                                android:textSize="14sp"/>
                        </TableRow>
                        <TableRow>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Published"
                                android:textColor="#24FF00"
                                android:fontFamily="@font/poppins_medium"
                                android:textSize="14sp" />
                            <TextView
                                android:layout_width="10dp"
                                android:layout_height="wrap_content"
                                android:text=":"
                                android:textAlignment="center"
                                android:textColor="#24FF00"
                                android:fontFamily="@font/poppins_medium"
                                android:textSize="14sp"/>
                            <TextView
                                android:id="@+id/published"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:maxLines="3"
                                android:textColor="#24FF00"
                                android:fontFamily="@font/poppins_medium"
                                android:textSize="14sp"/>
                        </TableRow>
                        <TableRow>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Gendre"
                                android:textColor="#24FF00"
                                android:fontFamily="@font/poppins_medium"
                                android:textSize="14sp" />
                            <TextView
                                android:layout_width="10dp"
                                android:layout_height="wrap_content"
                                android:text=":"
                                android:textAlignment="center"
                                android:textColor="#24FF00"
                                android:fontFamily="@font/poppins_medium"
                                android:textSize="14sp"/>
                            <TextView
                                android:id="@+id/gendre"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:maxLines="3"
                                android:textColor="#24FF00"
                                android:fontFamily="@font/poppins_medium"
                                android:textSize="14sp"/>
                        </TableRow>
                        <TableRow
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Authors"
                                android:textColor="#24FF00"
                                android:fontFamily="@font/poppins_medium"
                                android:textSize="14sp" />
                            <TextView
                                android:layout_width="10dp"
                                android:layout_height="wrap_content"
                                android:text=":"
                                android:textAlignment="center"
                                android:textColor="#24FF00"
                                android:fontFamily="@font/poppins_medium"
                                android:textSize="14sp"/>
                            <TextView
                                android:id="@+id/authors"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:maxLines="3"
                                android:textColor="#24FF00"
                                android:fontFamily="@font/poppins_medium"
                                android:textSize="14sp"/>
                        </TableRow>
                    </TableLayout>

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Score"
                        android:background="@drawable/circle_border"
                        android:padding="2dp"
                        android:textAlignment="center"
                        android:maxLines="3"
                        android:textColor="#24FF00"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="16sp"
                        android:layout_marginTop="30dp"/>
                    <TextView
                        android:id="@+id/score"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="-"
                        android:textColor="#24FF00"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:textSize="30sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Synopsis"
                android:textColor="#24FF00"
                android:fontFamily="@font/poppins_medium"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/synopsis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="#24FF00"
                android:fontFamily="@font/poppins_regular"
                android:textSize="14sp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/capter_view"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginTop="20dp"
            tools:listitem="@layout/capter_view" />
    </LinearLayout>
</ScrollView>